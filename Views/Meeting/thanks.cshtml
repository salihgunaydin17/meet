@model UserInfo
@{
ViewBag.Title="Başvuru Durumu";
}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>



    @if(Model.WillAttend==true)
    {
    <p>Teşekkürler @Model.Name , Toplantiya seninle birlikte @ViewBag.UserCount kişi katiliyor...</p>
    <a class="btn btn-sm btn-outline-primary" href="#">Katilimcilari Goruntule</a>
    }
    else
    {
    <p>@Model.Name, katilmadiginden dolayi uzgunuz...</p>
    <a class="btn btn-sm btn-outline-primary" href="/Meeting/Apply">Basvuru Formu</a>
    }







</main>